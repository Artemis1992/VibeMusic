# =====================================
# Django
# =====================================
DJANGO_SECRET_KEY=changeme_django_secret_key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# =====================================
# Database (Docker / production)
# =====================================
POSTGRES_DB=vibemusic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Если нужно отличать докер-среду (True/False)
DOCKER_ENV=false

# =====================================
# Email (SMTP)
# =====================================
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=changeme_email_app_password
DEFAULT_FROM_EMAIL=your_email@example.com

# =====================================
# CORS
# =====================================
CORS_ALLOWED_ORIGINS=http://localhost:8000

# =====================================
# Media / uploads
# =====================================
MAX_UPLOAD_MB=20

# =====================================
# Spotify API
# =====================================
SPOTIFY_CLIENT_ID=changeme_spotify_client_id
SPOTIFY_CLIENT_SECRET=changeme_spotify_client_secret

# =====================================
# JWT (simplejwt)
# =====================================
ACCESS_TOKEN_LIFETIME_MIN=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# =====================================
# IP / security limits (из settings.py)
# =====================================
IP_CHANGE_WINDOW_HOURS=1
IP_CHANGE_THRESHOLD=3
IP_CHANGE_RESTRICTION_SECONDS=18000  # 5 * 3600

# =====================================
# Telegram bot
# =====================================
TELEGRAM_BOT_TOKEN=changeme_telegram_bot_token
TELEGRAM_BOT_USERNAME=VibeMusicResetBot
TELEGRAM_GROUP_CHAT_ID=changeme_chat_id
